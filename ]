#!/bin/bash

# day_03.sh

#--------------------------Teste de recebimento de par√¢metro------------------#
test -z "$1" && echo "Erro!"  && exit 1 
#-----------------------------------------------------------------------------#
while read line
do
	let half_line=${#line}/2 
	echo "$half_line"
	for position in $(seq 1 $half_line)
	do
		echo "${line:$position:1}"
	done
done < "$1"
#-----------------------------------------------------------------------------#

#-----------------------------------------------------------------------------#
#-----------------------------------------------------------------------------#
#-----------------------------------------------------------------------------#
