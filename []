#!/bin/bash

# day_04.sh

#-----------------------------------Test input--------------------------------#
test -z "$1" && echo "Erro!"  && exit 1 
#-----------------------------------Variable----------------------------------#
#-----------------------------------Functions---------------------------------#
#------------------------------------Codes------------------------------------#
while read line
do
#---------------------------------First Star----------------------------------#
	IFS="," read -a assignments <<< $line
	echo "assignment 1 -> ${assignments[1]}"
	echo "assignment 2 -> ${assignments[2]}"
	for assignment in ${assignments[@]}
	do
		echo $assignment

	done


#---------------------------------Second Star---------------------------------#
#-------------------------------------END-------------------------------------#
done < "$1"
#-----------------------------------Results-----------------------------------#
echo "First star  -> $sum_priorities"
echo "Second star -> $sum_budges"
#--------------------------------------|--------------------------------------#
